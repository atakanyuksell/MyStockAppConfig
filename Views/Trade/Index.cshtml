@model MyStockAppConfiguration.Models.StockTrade

@{
    ViewBag.Title = "Home";
}

<div class="box trading-panel">

    <div class="flex trading-panel-flex">

        <div id="stock-price-panel">

            <div class="stock">
                <h1 class="stock-title">@Model.StockSymbol</h1>

                <table>
                    <tbody>
                        <tr>
                            <td>Current:</td>
                            <th><small>$</small> <span class="price">@Model.StockSymbol</span></th>
                        </tr>

                        <tr>
                            <td>High:</td>
                            <th><small>$</small> <span class="price">@Model.StockName.ToString()</span></th>
                        </tr>

                        <tr>
                            <td>Low:</td>
                            <th><small>$</small> <span class="price">@Model.Price.ToString()</span></th>
                        </tr>

                        <tr>
                            <td>Open:</td>
                            <th><small>$</small> <span class="price">@Model.Quantity.ToString()</span></th>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>